{
  "name": "@poriyaalar/custom-hooks",
  "version": "0.1.2",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run test",
    "build": "tsc",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Poriyaalar/custom-hooks.git"
  },
  "keywords": [
    "react",
    "custom-hooks",
    "react-hooks"
  ],
  "author": "Poriyaalar Private Limited",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Poriyaalar/custom-hooks/issues"
  },
  "homepage": "https://github.com/Poriyaalar/custom-hooks#readme",
  "dependencies": {
    "lodash": "^4.17.21",
    "react-router-dom": "^6.10.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.192",
    "@types/react": "^18.0.34",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/"
    ],
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/components/**",
      "<rootDir>/src/containers/**/sections/**",
      "<rootDir>/src/helper/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 10,
        "branches": 10,
        "functions": 10,
        "statements": 10
      }
    },
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "coverageDirectory": ".",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(js|jsx)": "babel-jest",
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  }
}
